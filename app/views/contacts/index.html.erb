<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>
        <% name_by = (params[:name_by] == 'asc') ? 'desc' : 'asc' %>
        <%=link_to 'Name', contacts_path(order: 'full_name', name_by: name_by) %></th>
      <th>
        <% email_by = (params[:email_by] == 'asc') ? 'desc' : 'asc' %>
        <%=link_to 'Email', contacts_path(order: 'email', email_by: email_by) %></th>
      </th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
